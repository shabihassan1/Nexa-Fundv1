# Server Configuration
NODE_ENV=development
PORT=5050

# Database Configuration (PostgreSQL)
# Option 1: Cloud Database (Recommended - Neon/Supabase)
DATABASE_URL='postgresql://username:password@your-db-host.neon.tech/dbname?sslmode=require'

# Option 2: Local Database
# DATABASE_URL='postgresql://postgres:password@localhost:5432/nexafund_db?schema=public'

# JWT Authentication
# Generate a strong secret key using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Or use: openssl rand -base64 64
JWT_SECRET="your-super-secret-jwt-key-change-this-to-a-long-random-string"
JWT_EXPIRES_IN="7d"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:8080"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"
